<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="LR2.MainPage" Title="Сафранчук Олександра К-26, ЛР2">

    <ScrollView>
        <VerticalStackLayout Spacing="25" Padding="30,50" VerticalOptions="Start">

            <StackLayout Orientation="Horizontal" HorizontalOptions="CenterAndExpand">
                <Button Text="Open file" Clicked="OnOpenFileButton" WidthRequest="150" Margin="5" BackgroundColor="LightPink"/>
                <Button Text="Search" Clicked="SearchBtnHandler" WidthRequest="150" Margin="5" BackgroundColor="LightPink"/>
                <Button Text="Clear" Clicked="ClearFields" WidthRequest="150" Margin="5" BackgroundColor="LightPink"/>
                <Button Text="Convert to HTML" Clicked="OnTransformToHTMLBtnClicked" WidthRequest="150" Margin="5" BackgroundColor="LightPink"/>
                <Button Text="Exit" Clicked="OnExitBtnClicked" WidthRequest="150" Margin="5" BackgroundColor="LightPink"/>
            </StackLayout>

           <Grid RowSpacing="10">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <StackLayout Grid.Row="0" Grid.ColumnSpan="2" Orientation="Horizontal" HorizontalOptions="Center" Margin="0,20,0,0">
                    <RadioButton x:Name="SaxBtn" Content="SAX API"/>
                    <RadioButton x:Name="DomBtn" Content="DOM API" Margin="20,0,0,0"/>
                    <RadioButton x:Name="LinqBtn" Content="LINQ to XML" Margin="20,0,0,0"/>
                </StackLayout>

                <VerticalStackLayout Grid.Row="1" Grid.Column="0" Spacing="10" Padding="20,0">
                    <StackLayout Orientation="Horizontal" VerticalOptions="Center">
                        <CheckBox x:Name="FullNameCheckBox" Color="LightPink"/>
                        <Label Text="Full Name" WidthRequest="100" VerticalTextAlignment="Center"/>
                        <Picker x:Name="FullNamePicker" WidthRequest="250"/>
                    </StackLayout>

                    <StackLayout Orientation="Horizontal" VerticalOptions="Center">
                        <CheckBox x:Name="FacultyCheckBox" Color="LightPink"/>
                        <Label Text="Faculty" WidthRequest="100" VerticalTextAlignment="Center"/>
                        <Picker x:Name="FacultyPicker" WidthRequest="250"/>
                    </StackLayout>

                    <StackLayout Orientation="Horizontal" VerticalOptions="Center">
                        <CheckBox x:Name="DepartmentCheckBox" Color="LightPink"/>
                        <Label Text="Department" WidthRequest="100" VerticalTextAlignment="Center"/>
                        <Picker x:Name="DepartmentPicker" WidthRequest="250"/>
                    </StackLayout>

                    <StackLayout Orientation="Horizontal" VerticalOptions="Center">
                        <CheckBox x:Name="PositionCheckBox" Color="LightPink"/>
                        <Label Text="Position" WidthRequest="100" VerticalTextAlignment="Center"/>
                        <Picker x:Name="PositionPicker" WidthRequest="250"/>
                    </StackLayout>
                </VerticalStackLayout>

               
                    <Editor Grid.Row="1" Grid.Column="1" 
                        x:Name="editor" 
                        Margin="10,0,0,0"
                        IsReadOnly="true" 
                        TextChanged="Editor_TextChanged" 
                        HeightRequest="400"
                        VerticalOptions="FillAndExpand"/>
               
            </Grid>
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>